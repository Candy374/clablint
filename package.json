{
  "name": "clab-lint",
  "displayName": "Convertlab I18n tool",
  "description": "a I18n tool for convertlab",
  "version": "0.0.2",
  "publisher": "convertlab",
  "engines": {
    "vscode": "^1.58.0"
  },
  "repository": "https://github.com/Candy374/clablint",
  "categories": [
    "Other",
    "Linters"
  ],
  "keywords": [
    "React",
    "i18n"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact",
    "onLanguage:javascript",
    "onCommand:clab-lint.start",
    "onCommand:clab-lint.helloWorld"
  ],
  "main": "./out/extension.js",
  "icon": "favicon.png",
  "contributes": {
    "commands": [
      {
        "command": "clab-lint.start",
        "title": "clab-lint translate current file"
      },
      {
        "command": "clab-lint.helloWorld",
        "title": "Hello"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Convertlab I18N Lint",
      "properties": {
        "clab-lint.enableReplaceSuggestion": {
          "type": "boolean",
          "default": true,
          "description": "Add a light blob beside string literal and provide I18N variable replacement suggestions"
        },
        "clab-lint.markStringLiterals": {
          "type": "boolean",
          "default": true,
          "description": "Mark string literals in editor so you can quickly spot on them"
        },
        "clab-lint.showOverviewRuler": {
          "type": "boolean",
          "default": true,
          "description": "Show non-English letter position on the overview ruler"
        },
        "clab-lint.markColor": {
          "type": "string",
          "default": "#f40",
          "description": "The color of matched non-English letters"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.171",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/prettier": "^2.3.2",
    "@types/randomstring": "^1.1.7",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "typescript": "^4.3.2",
    "fs-extra": "^10.0.0",
    "lodash": "^4.17.21",
    "prettier": "^2.3.2",
    "randomstring": "^1.2.1"
  }
}
